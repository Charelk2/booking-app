SECRET_KEY=your_super_secret_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
SQLALCHEMY_DATABASE_URL=sqlite:///./booking.db
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3002"]
CORS_ALLOW_ALL=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/google-calendar/callback
FRONTEND_URL=http://localhost:3000
# For production across subdomains, set to your public site origin, e.g.:
# FRONTEND_URL=https://booka.co.za
DEFAULT_CURRENCY=ZAR
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
FLIGHT_API_KEY=
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=no-reply@localhost

# Scope auth cookies across subdomains (production): use a bare domain string only
# Example: COOKIE_DOMAIN=.booka.co.za
COOKIE_DOMAIN=

# Login rate limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=300
PAYMENT_GATEWAY_URL=https://example.com
GOOGLE_MAPS_API_KEY=

# --- Paystack payments (real gateway) -----------------------------------------
# Set these to enable real Paystack checkout. Leave PAYMENT_GATEWAY_FAKE unset.
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
# Frontend (Paystack Inline) public key
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=
# Optional redirect after payment; any frontend page is fine
PAYSTACK_CALLBACK_URL=
# Frontend: enable Paystack UI (1 to use Paystack, 0 to call backend directly)
NEXT_PUBLIC_USE_PAYSTACK=1
# Keep fake payments disabled when using Paystack
NEXT_PUBLIC_FAKE_PAYMENTS=0

# --- Attachments proxy/redirect (backend) ------------------------------------
# Optional allowlist of extra hosts permitted by /api/v1/attachments/proxy.
# Only set this if you serve attachments from a custom domain in addition to
# the default '*.r2.cloudflarestorage.com'. Comma-separated list; exact hosts
# or subdomains are allowed (host or any subdomain of host).
# Example: ATTACHMENTS_PROXY_ALLOWED_HOSTS=media.booka.co.za
# Leave unset for the default behavior (only *.r2.cloudflarestorage.com).
ATTACHMENTS_PROXY_ALLOWED_HOSTS=

# Maximum size (in megabytes) the streaming proxy will relay when
# /attachments/proxy is called with mode=stream. Redirect mode (default)
# is not affected. Set to 0 to disable the size check. Default is 50.
# Example: ATTACHMENTS_PROXY_MAX_MB=50
ATTACHMENTS_PROXY_MAX_MB=
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
NEXT_PUBLIC_GSI_USE_FEDCM=1

# Admin console allowlist
# Comma-separated list of emails and/or domains
ADMIN_EMAILS=
# Alternatively allow whole domains (comma-separated)
ADMIN_DOMAINS=

# ----------------------------------------------------------------------------
# Optional infrastructure (recommended in production)
# ----------------------------------------------------------------------------
# Primary cache and background tasks
REDIS_URL=redis://localhost:6379/0
# WebSocket pub/sub (enables SSE fallback + cross-process fanout)
WEBSOCKET_REDIS_URL=

# Public API base used by the frontend (when calling API directly from the browser)
# In production, set to your API host. In local dev, use http://localhost:8000
# NEXT_PUBLIC_API_URL=https://api.booka.co.za
# WebSocket base for realtime (must be ws:// in dev or wss:// in prod)
# NEXT_PUBLIC_WS_URL=wss://api.booka.co.za

# ----------------------------------------------------------------------------
# Frontend: "Coming Soon" gate (Vercel production)
# ----------------------------------------------------------------------------
# When COMING_SOON=1 and the request Host matches COMING_SOON_HOSTS, all routes
# redirect to /coming-soon (except /api, /_next, and public files).
COMING_SOON=0
COMING_SOON_HOSTS=booka.co.za,www.booka.co.za

# ----------------------------------------------------------------------------
# Frontend: Mailjet waitlist signup (/api/waitlist)
# ----------------------------------------------------------------------------
# Create a Mailjet contact list and set its numeric ID here.
MAILJET_WAITLIST_LIST_ID=
# Optional: marketing list sync for account opt-in/out (backend).
MAILJET_MARKETING_LIST_ID=
# Mailjet API key/secret (Basic auth). Keep server-side only (no NEXT_PUBLIC prefix).
MAILJET_API_KEY=
MAILJET_API_SECRET=
# Optional: disable Mailjet calls (treat all signups as success), useful for local dev.
MAILJET_WAITLIST_DISABLE=0
