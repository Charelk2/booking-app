SECRET_KEY=generate_a_secure_random_value
FRONTEND_URL=https://app.yourdomain.com
# Scope cookies to apex (optional). Leave empty for host-only
COOKIE_DOMAIN=.yourdomain.com

# Frontend references
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=https://api.yourdomain.com

# Redis (optional)
REDIS_URL=redis://redis:6379/0

# Postgres via sidecar (Cloud SQL Auth Proxy listening on 127.0.0.1:5432)
SQLALCHEMY_DATABASE_URL=postgresql+psycopg2://appuser:password@127.0.0.1:5432/appdb

# DB pool sizing (tune for traffic)
DB_POOL_SIZE=15
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=1800
